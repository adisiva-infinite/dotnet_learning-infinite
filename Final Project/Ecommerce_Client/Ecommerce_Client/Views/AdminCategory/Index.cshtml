@model IEnumerable<Ecommerce_Client.Models.Category>
@{ ViewBag.Title = "Categories List"; }

<!-- Custom UI Features -->
<style>
    /* Body and container styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        text-align: left;
        padding: 12px 15px;
        vertical-align: middle;
    }

    th {
        background-color: #343a40;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e9ecef;
        cursor: pointer;
    }

    /* Button styling */
    .btn {
        font-size: 14px;
        padding: 8px 16px;
        margin: 5px;
        text-align: center;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-outline-primary {
        color: #007bff;
        background-color: transparent;
        border: 1px solid #007bff;
    }

        .btn-outline-primary:hover {
            color: #fff;
            background-color: #007bff;
            border-color: #0056b3;
        }

    .btn-outline-dark {
        color: #343a40;
        background-color: transparent;
        border: 1px solid #343a40;
    }

    .btn-outline-dark:hover
    {
       color: #fff;
       background-color: #343a40;
       border-color: #1d2124;
     }

    .back-link {
        display: inline-block;
        margin-top: 20px;
    }

    img {
        border-radius: 8px;
    }
</style>

<h2 class="text-center">Categories List</h2>

<!-- Link to create a new category -->
<p class="text-center">
    @Html.ActionLink("Create New Category", "Create", "AdminCategory", null, new { @class = "btn btn-info btn-lg" })
</p>
<!-- Categories Table -->
<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Category Id</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>Product Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
<tr>
    <td>@category.CategoryId</td>
    <td>@category.CategoryName</td>
    <td>@category.Description</td>
    <td>
        @if (!string.IsNullOrEmpty(category.ProductImage))
        {
<img src="@category.ProductImage" alt="@category.CategoryName" style="width: 100px; height: auto; border-radius: 8px;" /> }
else
{
<span>No Image</span>}
    </td>
    <td>
        <!-- Create Products under this category -->
        @Html.ActionLink("Create", "Create", "AdminProducts", new { id = category.CategoryId }, new { @class = "btn btn-outline-primary btn-sm" })
        <br />
        @Html.ActionLink("Show All Products", "ShowProducts", "AdminCategory", new { id = category.CategoryId }, new { @class = "btn btn-outline-dark btn-sm mt-2" })
    </td>
</tr>}
        </tbody>
    </table>

    <a href="@Url.Action("Index", "AdminDashboard")" class="back-link btn btn-warning btn-lg">Back to Admin Dashboard</a>

</div>

